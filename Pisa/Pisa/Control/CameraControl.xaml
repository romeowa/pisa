<UserControl x:Class="Pisa.Control.CameraControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
    	<Rectangle >
    		<Rectangle.Fill>
    			<VideoBrush x:Name="VideoViewfinderBrush" Stretch="UniformToFill">
    				<VideoBrush.RelativeTransform>
    					<CompositeTransform x:Name="VideoViewfinderTransform" CenterX="0.5" CenterY="0.5" />
    				</VideoBrush.RelativeTransform>
    			</VideoBrush>
    		</Rectangle.Fill>
    	</Rectangle>
    	<TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="카메라" VerticalAlignment="Center" Foreground="White"/>
    </Grid>
</UserControl>